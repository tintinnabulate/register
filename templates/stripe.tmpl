<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>Register for {{ .Name }}</title>
		<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  </head>
  <body class="bg-light">
    <div class="container">
      <div class="py-5 text-center">
        <img class="d-block mx-auto mb-4" src="https://getbootstrap.com/assets/brand/bootstrap-solid.svg" alt="" width="72" height="72">
        <h2>Complete payment to Register</h2>
        <p class="lead">{{ .Name }}</p>
      </div>

        <div class="col-md-8 mx-auto order-md-1">
          <h4 class="mb-3">Payment Details</h4>
            <form action="/charge" method="post" class="payment">
		    {{ .csrfField }}
            <div class="row">
              <div class="col-md-6 mb-3">

  <article>
    <label class="amount">
      <span>Amount: {{ .CostPrint }} {{ .Currency }}</span>
    </label>
  </article>

              </div>
            </div>

            <hr class="mb-4">
  <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
    data-key="{{ .Key }}"
    data-description="{{ .Name }} Registration"
    data-amount="{{ .Cost }}"
	data-currency="{{ .Currency }}"
    data-locale="auto"
	data-email="{{ .Email }}"
	data-zip-code="true"></script>
          </form>
        </div>
      </div>

      <footer class="my-5 pt-5 text-muted text-center text-small">
        <p class="mb-1">&copy; 2018</p>
      </footer>

	  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
	  <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
      <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    </body>
</html>
